<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= render 'users/shared/error_messages' %>
  <%# f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :first_name,  placeholder: 'your first name' %>
  	<%= f.input :last_name,  placeholder: 'last name' %>
  	<%= f.select :position, options_for_select(['Project manager', 'Accounting', 'Operations']), :include_blank => 'Please Select Your Position' %>
    <%= f.input :email, :autofocus => true %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
